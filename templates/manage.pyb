<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
        <title>\( ._.)/</title>
        <link rel="stylesheet" href="${STATIC}/style/main.css">
        <link rel="stylesheet" href="${STATIC}/style/mod.css">
        <link rel="stylesheet" href="${STATIC}/style/form.css">
    </head>
    <body>
        <div id="fade"></div>
        <div class="centre postform">
	        <h1>${LANG_DROPS}</h1>
            <form id="drops" action="/delete" enctype="multipart/form-data" method="post">
                <table class="tcc">
                    <tr>
                      <td class="thead"></td>
                      <td class="thead">${LANG_LOCATION}</th>
                      <td class="thead">${LANG_OWNER}</th>
                      <td class="thead">${LANG_FILENAME}</th>
                      <td class="thead">${LANG_TYPE}</th>
                      <td class="thead">${LANG_UPLOADED}</th>
	                  <td class="thead">${LANG_SIZE}</th>
                      <td class="thead">${LANG_VIEWS}</td>
                    </tr>
                    ${DROPS}
                </table>
				<h3>${LANG_YOURKEY}: ${APIKEY}</h3>
            	<input type="submit" class="b half" value="Delete">
			</form>
			<h1>${LANG_CHANGEPASS}</h1><br>
			<form id="change_pass" action="/changePass" enctype="multipart/form-data" method="post">
				<input class="text" type="password" name="oldpass" placeholder="Old password"><br>
				<input class="text" type="password" name="newpass" placeholder="New password"><br>
				<input class="text" type="password" name="newpass2" placeholder="Confirm password"><br><br>
				<input class="b half" type="submit" value="Change password">
			</form>
        </div>
        <div class="footer">
            <span class='footer-span'>${LANG_POWEREDBY} ${VERSION}</span>
        </div>
    </body>
</html>